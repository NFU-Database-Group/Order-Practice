<!DOCTYPE html>
<html lang="zh-Hant">
<%- include('head') %>
<body>
    <%- include('header') %>
    <div class="container">
        <h2>熱門商品</h2>
        <div class="product-list">
        <% products.forEach(function(product) { %>
            <div class="product">
                <h3><%= product.name %></h3>
                <p>價格: NT$<%= product.price %></p>
                <p>庫存: <%= product.quantity %></p>
                <button>加入購物車</button>
            </div>
        <% }); %>
        </div>
    </div>
</body>
</html>